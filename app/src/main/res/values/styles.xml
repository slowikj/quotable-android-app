<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        in order to have solid color-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.Dashboard">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dashboard.Category">
        <item name="android:background">@drawable/category_header_background</item>
        <item name="background">@drawable/category_header_background</item>
    </style>

    <style name="AppTheme.Dashboard.Category.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AuthorItem">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:background">@drawable/recycler_item_background</item>
        <item name="background">@drawable/recycler_item_background</item>
    </style>

    <style name="AppTheme.AuthorItem.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.AuthorItem.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.QuoteItem">
        <item name="android:background">@drawable/recycler_item_background</item>
        <item name="background">@drawable/recycler_item_background</item>
    </style>

    <style name="AppTheme.QuoteItem.Main" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.QuoteItem.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.QuoteItem.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.DefaultWindow">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="QuoteCard">
        <item name="android:background">@drawable/recycler_item_background</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="background">@drawable/recycler_item_background</item>
    </style>

    <style name="QuoteCard.Tag" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="QuoteCard.AuthorText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="QuoteCard.Content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="BottomNav">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AuthorToolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AuthorToolbar.Subtitle">
        <item name="android:textColor">@color/white_87</item>
    </style>
</resources>