<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuotableApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorPrimaryVariant">@color/shrine_pink_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tickle_me_pink</item>
        <item name="colorSecondaryVariant">@color/dark_brown</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Error -->
        <item name="colorError">@color/red_violet</item>
        <!-- Surface. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_brown</item>
        <!-- Background. -->
        <item name="backgroundColor">@color/shrine_pink_100</item>
        <item name="colorOnBackground">@color/dark_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="secondaryTextAlpha">0.7</item>

        <!-- Customize your theme here. -->
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.QuotableApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.QuotableApp.LargeComponent
        </item>
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.QuotableApp.SmallComponent
        </item>
        <item name="imageButtonStyle">@style/QuotableApp.ImageButton</item>

    </style>

    <style name="ThemeOverlay.QuotableApp.RandomQuote" parent="">
        <item name="colorSurface">@color/shrine_pink_dark</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="ThemeOverlay.QuotableApp.AuthorToolbar" parent="">
        <item name="colorPrimary">@color/shrine_pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>