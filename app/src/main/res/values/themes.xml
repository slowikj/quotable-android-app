<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuotableApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_rock</item>
        <item name="colorPrimaryVariant">@color/hillary</item>
        <item name="colorOnPrimary">@color/tana</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sycamore</item>
        <item name="colorSecondaryVariant">@color/crete</item>
        <item name="colorOnSecondary">@color/cod_gray</item>
        <!-- Error -->
        <item name="colorError">@color/cinnabar</item>
        <!-- Surface. -->
        <item name="colorSurface">@color/ecru_white</item>
        <item name="colorOnSurface">@color/cod_gray</item>
        <!-- Background. -->
        <item name="backgroundColor">@color/quarter_pearl_lusta</item>
        <item name="colorOnBackground">@color/fern_frond</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorOnActionBar">@color/charcoal</item>

        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/QuotableApp.AppBarLayout</item>

        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.QuotableApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.QuotableApp.LargeComponent
        </item>
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.QuotableApp.SmallComponent
        </item>
        <item name="imageButtonStyle">@style/QuotableApp.ImageButton</item>

        <item name="secondaryContentAlpha">0.87</item>
        <item name="tertiaryContentAlpha">0.6</item>

    </style>

    <style name="ThemeOverlay.QuotableApp.RandomQuote" parent="">
        <item name="colorSurface">@color/primrose</item>
        <item name="colorOnSurface">@color/cod_gray</item>
    </style>

    <style name="ThemeOverlay.QuotableApp.AuthorToolbar" parent="">
        <item name="colorPrimary">@color/primrose</item>
        <item name="colorOnPrimary">@color/cod_gray</item>
    </style>

    <style name="ThemeOverlay.QuotableApp.DashboardTag" parent="">
        <item name="colorSurface">@color/primrose</item>
        <item name="colorOnSurface">@color/cod_gray</item>
    </style>

</resources>