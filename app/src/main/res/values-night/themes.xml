<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuotableApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorPrimaryVariant">@color/shrine_pink_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/dark_brown</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Error -->
        <item name="colorError">@color/red</item>
        <!-- Surface. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Background. -->
        <item name="backgroundColor">@color/shrine_pink_100</item>
        <item name="colorOnBackground">@color/dark_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>