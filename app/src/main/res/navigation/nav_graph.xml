<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allQuotesFragment">

    <fragment
        android:id="@+id/allQuotesFragment"
        android:name="com.example.quotableapp.view.allquotes.AllQuotesFragment"
        android:label="AllQuotesFragment" >
        <action
            android:id="@+id/showOneQuote"
            app:destination="@id/oneQuoteFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/oneQuoteFragment"
        android:name="com.example.quotableapp.view.onequote.OneQuoteFragment"
        android:label="OneQuoteFragment">
        <argument
            android:name="quoteId"
            app:argType="string"/>
    </fragment>
</navigation>