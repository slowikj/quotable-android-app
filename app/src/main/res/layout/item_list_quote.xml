<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.quotableapp.data.model.Quote" />

        <variable
            name="onClickHandler"
            type="com.example.quotableapp.ui.common.quoteslist.QuotesAdapter.ViewHolder.OnClickHandler" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/QuoteCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onClickHandler.onItem(model)}"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_tag" />

        <ImageView
            android:id="@+id/image_quote"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_quote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_tags" />

        <TextView
            android:id="@+id/content"
            style="@style/QuoteCard.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{model.content}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_quote"
            app:layout_constraintTop_toBottomOf="@id/image_quote"
            tools:text="Lorem ipsum lorem ipsum" />

        <TextView
            android:id="@+id/author"
            style="@style/QuoteCard.AuthorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="@{() -> onClickHandler.onAuthor(model)}"
            android:text="@{model.author}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content"
            tools:text="Author" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>